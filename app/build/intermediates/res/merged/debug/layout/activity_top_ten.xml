<?xml version="1.0" encoding="utf-8"?><!-- ScrollView Vertical -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollViewBG"
    tools:context="com.example.android.musicstructureapp.TopTenActivity">

    <!-- Main Layout - Linear Vertical -->
    <LinearLayout style="@style/LinearLayoutMain">

        <!-- Top Songs Title -->
        <TextView
            style="@style/TopTenTitles"
            android:text="@string/top_ten_songs" />

        <!-- Horizontal ScrollView for top songs-->
        <HorizontalScrollView style="@style/HorizontalScrollView">

            <!-- Horizontal LinearLayout for top songs-->
            <LinearLayout style="@style/HorizontalLinearLayout">

                <!-- Images for Top Songs -->
                <ImageView
                    android:id="@+id/eminem"
                    style="@style/TopTenImages"
                    android:contentDescription="@string/song_image"
                    android:src="@drawable/eminem" />

                <ImageView
                    android:id="@+id/alpha_blondy"
                    style="@style/TopTenImages"
                    android:contentDescription="@string/song_image"
                    android:src="@drawable/alpha_blondy" />

                <ImageView
                    android:id="@+id/adele"
                    style="@style/TopTenImages"
                    android:contentDescription="@string/song_image"
                    android:src="@drawable/adele100" />

                <ImageView
                    android:id="@+id/bob_marley"
                    style="@style/TopTenImages"
                    android:contentDescription="@string/song_image"
                    android:src="@drawable/bobmarley100" />

                <ImageView
                    android:id="@+id/eminem1"
                    style="@style/TopTenImages"
                    android:contentDescription="@string/song_image"
                    android:src="@drawable/eminem" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Top Albums Title -->
        <TextView
            style="@style/TopTenTitles"
            android:text="@string/top_ten_albums" />

        <!-- Horizontal ScrollView for top albums -->
        <HorizontalScrollView style="@style/HorizontalScrollView">

            <!-- Horizontal LinearLayout for top albums -->
            <LinearLayout style="@style/HorizontalLinearLayout">

                <!-- Images for Top Albums -->
                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/adele100" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/eminem" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/bobmarley100" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/alpha_blondy" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/adele100" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Top Artists Title -->
        <TextView
            style="@style/TopTenTitles"
            android:text="@string/top_ten_artists" />

        <!-- Horizontal ScrollView for top artists-->
        <HorizontalScrollView style="@style/HorizontalScrollView">

            <!-- Horizontal LinearLayout for top artists -->
            <LinearLayout style="@style/HorizontalLinearLayout">

                <!-- Images for Top Artists -->
                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/artist_image"
                    android:src="@drawable/bobmarley100" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/artist_image"
                    android:src="@drawable/eminem" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/artist_image"
                    android:src="@drawable/adele100" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/artist_image"
                    android:src="@drawable/alpha_blondy" />

                <ImageView
                    style="@style/TopTenImages"
                    android:contentDescription="@string/artist_image"
                    android:src="@drawable/bobmarley100" />

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Explanation Text for the Activity -->
        <TextView
            style="@style/ExplanationText"
            android:text="@string/top_ten_explanation" />

    </LinearLayout>


</ScrollView>
